<?xml version="1.0" encoding="utf-8"?><!--空心圆角矩形  -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <corners android:radius="24dp" /><!-- 圆角半径 -->

    <stroke
        android:width="1dp"
        android:color="@color/white" /><!--矩形的边线  -->

    <gradient
        android:endColor="#0e000000"
        android:startColor="#0e000000" /><!-- 矩形的内部颜色，这里设置成白色，即空心 -->

</shape>