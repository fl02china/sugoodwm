<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/globleLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">



            <!-- 首页广告位-->
            <!--<android.support.v4.view.ViewPager-->
                <!--android:id="@+id/vp_home"-->
                <!--android:layout_width="match_parent"-->

                <!--android:layout_height="179dp" />-->

            <!-- 首页广告位-->
            <com.youth.banner.Banner

                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="179dp" />
            <!--<com.mgyapp.android.view.AutoScrollGallery-->
                <!--android:id="@+id/gallery"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="178dp"-->
                <!--android:background="@color/white" />-->
            <!-- 分类1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/vp_classic"
                        android:layout_width="match_parent"
                        android:layout_height="155dp"></android.support.v4.view.ViewPager>

                    <com.sugoodwaimai.app.view.MyGridView
                        android:id="@+id/home_top_gv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:horizontalSpacing="3dp"
                        android:numColumns="4"
                        android:verticalSpacing="3dp" />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:weightSum="5">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/homeAd1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="2"
                    android:background="@drawable/guanggao1" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:weightSum="5">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/homeAd2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="3dp"
                        android:layout_weight="2"
                        android:background="@drawable/guanggao2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:weightSum="2">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/homeAd3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/guanggao3" />

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/homeAd4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/guanggao4" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <!-- 分类2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.sugoodwaimai.app.view.MyGridView
                    android:id="@+id/home_down_gv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="3dp"
                    android:numColumns="5"
                    android:verticalSpacing="3dp"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#EFEFEF" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC" />

            <!-- 猜你喜欢 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="20dip"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="--猜你喜欢--" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:visibility="gone" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
