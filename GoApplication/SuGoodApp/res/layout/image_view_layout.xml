<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical">

    <ImageView android:id="@+id/my_imageview"
               android:src="@drawable/market_detail_food_img"
               android:layout_width="100dp"
               android:layout_height="100dp"
    />

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="25dp"
        android:layout_alignBottom="@+id/my_imageview" android:alpha="0.5"
        android:background="@color/black"></LinearLayout>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="安格斯肉眼"
              android:textColor="@color/white"
              android:gravity="center"
              android:layout_alignBottom="@+id/my_imageview"
              android:textSize="@dimen/text_middle"/>
</RelativeLayout>
