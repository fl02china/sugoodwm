<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="4dp"
    app:contentPadding="10dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text1"
            style="@style/SmallText"
            android:text="订单编号:" />

        <TextView
            android:id="@+id/order_num"
            style="@style/SmallText"
            android:layout_toRightOf="@+id/text1"
            android:text="text3333333" />


        <TextView
            android:id="@+id/time"
            style="@style/SmallText"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/order_num"
            android:textColor="@color/grey"
                android:gravity="right"
            android:text="2017/05/06 15:30" />


        <TextView
            android:id="@+id/name"
            style="@style/SmallText"
            android:layout_below="@+id/text1"
            android:text="MISSDONG" />

        <TextView
            android:id="@+id/phone"
            style="@style/SmallText"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text1"

            android:text="1234455555" />

        <TextView
            android:id="@+id/text2"
            style="@style/SmallText"
            android:layout_below="@+id/name"
            android:text="@string/addr" />

        <TextView
            android:id="@+id/addr"
            style="@style/SmallText"
            android:layout_below="@+id/name"
            android:layout_toRightOf="@+id/text2"
            android:text="111111" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/text2"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:id="@+id/line7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img"
            android:orientation="vertical">


            <TextView
                android:id="@+id/goodname"
                style="@style/SmallText_gray"

                android:text="nvxiezhuandian"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goodsname"
                    style="@style/SmallText_gray"
                    android:text="nvxiezhuandian"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/num"
                    style="@style/SmallText_gray"

                    android:text="X1"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView

                    style="@style/SmallText"

                    android:text="@string/xiaoji"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/item_price"
                    style="@style/SmallText_gray"
                    android:text="44"
                    android:textColor="@color/yellow"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/divider1"
            style="@style/Divider"
            android:layout_below="@+id/line7"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:id="@+id/liner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1" />

            <TextView

                style="@style/SmallText"

                android:text="@string/order_tol"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/money_tol"
                style="@style/SmallText"

                android:layout_marginRight="10dp"
                android:text="38.00"
                android:textColor="@color/text_red"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/money_num"
                style="@style/SmallText"
                android:layout_below="@+id/text1"


                android:textSize="14sp"

                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/liner2"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/liner1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tx_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"

                android:background="@drawable/bg_cancle_order"
                android:gravity="center" />

            <TextView
                android:id="@+id/tx_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@drawable/bg_connect_sj"
                android:gravity="center" />

            <TextView
                android:id="@+id/tx_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@drawable/bg_gopay"
                android:gravity="center" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>