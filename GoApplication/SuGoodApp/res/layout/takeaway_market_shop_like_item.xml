<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">


        <TextView
            android:id="@+id/takeaway_market_like_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/takeaway_market_like_title"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="@color/text_red"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/takeaway_market_like_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/takeaway_market_like_image"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black_de"
            android:textSize="@dimen/text_middle" />

        <ImageView
            android:id="@+id/takeaway_market_like_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:scaleType="fitXY" />

    </RelativeLayout>
</LinearLayout>