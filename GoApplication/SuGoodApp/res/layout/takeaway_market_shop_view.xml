<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/takeaway_market_shop_detail_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/takeaway_market_shop_detail_header"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/takeaway_shop_info_img"
            android:layout_width="60dp"

            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/defasd_111" />


        <TextView
            android:id="@+id/takeaway_shop_info_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/takeaway_shop_info_img"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/text_middle" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/takeaway_shop_info_img"
            android:layout_toLeftOf="@+id/takeaway_shop_info_tel"
            android:src="@drawable/phone_icon" />

        <TextView
            android:id="@+id/takeaway_shop_info_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/takeaway_shop_info_tel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:drawablePadding="10dp"
            android:textSize="@dimen/text_middle" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/takeaway_shop_info_tel"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/takeaway_shop_info_address"
            android:src="@drawable/ic_menu_user_on" />


    </RelativeLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/takeaway_market_shop_detail_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/takeaway_market_shop_detail_ll"
        android:clipToPadding="true" />

    <RelativeLayout
        android:id="@+id/takeaway_market_shop_detail_header"

        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/red"
        android:minHeight="40dp">


        <ImageView
            android:id="@+id/takeaway_market_shop_detail_header_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"

            android:src="@drawable/back_icon" />


        <TextView
            android:id="@+id/takeaway_market_shop_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商店信息"
            android:textColor="@color/white"
            android:textSize="@dimen/text_middle"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/takeaway_market_shop_farvorite_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/farvorite_icon"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/takeaway_market_shop_search"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/takeaway_market_shop_farvorite_img"
            android:src="@drawable/search_white_icon"
            android:visibility="gone" />


    </RelativeLayout>


</RelativeLayout>