<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:padding="10dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/takeaway_shop_comment_user_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:src="@drawable/user_icon"

        />

    <TextView
        android:id="@+id/takeaway_shop_comment_user_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:layout_toRightOf="@+id/takeaway_shop_comment_user_img"
        android:gravity="center"
        android:text="Start1995"
        android:textColor="#424242"
        android:textSize="@dimen/text_middle"

        />

    <RatingBar
        android:id="@+id/takeaway_shop_comment_user_ratingbar"
        style="@style/Base.Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/takeaway_shop_comment_user_name"
        android:layout_below="@+id/takeaway_shop_comment_user_name"
        android:numStars="5"
        android:rating="5" />

    <TextView
        android:id="@+id/takeaway_shop_comment_user_receiver_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/takeaway_shop_comment_user_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/takeaway_shop_comment_user_ratingbar"
        android:gravity="center"
        android:text="32min"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_small"

        />

    <TextView
        android:id="@+id/takeaway_shop_user_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/takeaway_shop_comment_user_ratingbar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/takeaway_shop_comment_user_img"
        android:gravity="center"
        android:text="量足！！！！！！！！！！"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_small"

        />

    <HorizontalScrollView
        android:id="@+id/takeaway_shop_comment_sv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/takeaway_shop_user_comment"
        android:layout_toRightOf="@+id/takeaway_shop_comment_user_img">

        <LinearLayout
            android:id="@+id/takeaway_shop_comment_ll"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:layout_marginTop="10dp"
            android:orientation="horizontal"

            android:src="@drawable/snacks_icon" />


    </HorizontalScrollView>


    <LinearLayout
        android:id="@+id/takeaway_shop_user_comment_praise_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/takeaway_shop_comment_sv"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/takeaway_shop_comment_user_img"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/small_praise_icon" />

        <TextView
            android:id="@+id/takeaway_shop_user_comment_praise_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="土豆牛肉/红烧豆腐双拼饭，可乐，可乐"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_small"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/takeaway_shop_user_comment_praise_ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/takeaway_shop_user_comment_praise_ll1"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/takeaway_shop_comment_user_img"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/small_mark_icon" />

        <TextView
            android:id="@+id/takeaway_shop_user_comment_praise_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="味道好，新鲜，包装好，分量足，服务好，送货快，准时送到"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_small"

            />


    </LinearLayout>


    <TextView
        android:id="@+id/takeaway_shop_remark_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/takeaway_shop_user_comment_praise_ll2"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/takeaway_shop_comment_user_img"
        android:background="@color/text_grey"
        android:padding="3dp"
        android:text="商家回复：感谢你的支持，小暖会继续努力"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_small" />


    <TextView
        android:id="@+id/takeaway_shop_comment_createtime"
        android:layout_width="wrap_content"


        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/takeaway_shop_comment_user_img"
        android:text="2017-03-02 "
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_small" />

</RelativeLayout>