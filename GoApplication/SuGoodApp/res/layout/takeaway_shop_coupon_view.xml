<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/takeaway_shop_bg"
        android:visibility="gone">

        <TextView
            android:id="@+id/takeaway_shop_coins_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="￥"
            android:textColor="@color/text_red"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:id="@+id/takeaway_shop_coupon_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/takeaway_shop_coins_tv"
            android:text="5"
            android:textColor="@color/text_red"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:id="@+id/takeaway_shop_coupon_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/takeaway_shop_coupon_price_tv"
            android:text="商家代金券"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/takeaway_shop_coupon_type_tv"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/takeaway_shop_coupon_price_tv"
            android:text="仅限本店新用户"
            android:textSize="@dimen/text_middle"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="去领取"
            android:textColor="@color/text_red"
            android:textSize="@dimen/text_middle" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="#F8F8F8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热销榜"

            android:textColor="@color/text_black"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="大家喜欢吃，才叫真好吃"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_middle" />
    </LinearLayout>
</LinearLayout>
