<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:background="@drawable/desc_bg"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/header_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_icon" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/desc_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="-40dp"
        android:layout_gravity="center_horizontal"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="@dimen/activity_vertical_margin"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/takeaway_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111"
            android:gravity="center"

            android:textColor="@color/text_black"
            android:textSize="@dimen/text_middle" />

        <RatingBar
            android:id="@+id/takeaway_rating"
            style="@style/RadingStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:numStars="5"


            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/takeaway_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"

            android:textColor="@color/text_black"
            android:textSize="@dimen/text_small" />
        <TextView
            style="@style/Divider.Vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="15dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            />

        <TextView
            android:id="@+id/takeaway_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="配送时间：10：00-23:00"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_small" />

    </LinearLayout>
    <View
        android:id="@+id/divider1"
        style="@style/Divider"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sj_title"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textColor="@color/text_black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/takeaway_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_name_tips"
        android:layout_marginTop="15dp"
        android:textColor="@color/text_black"
        android:textSize="12sp" />

    <View
        android:id="@+id/divider2"
        style="@style/Divider"
        android:layout_marginTop="15dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商家活动"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textColor="@color/text_black"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/takeaway_favorable1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打折"
            android:drawablePadding="5dp"
            android:visibility="gone"
            android:drawableLeft="@drawable/tv_favorable_bg1"
            android:textColor="@color/text_black"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/takeaway_favorable2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="满100减10"
            android:drawableLeft="@drawable/tv_favorable_bg2"
            android:drawablePadding="5dp"
            android:textColor="@color/text_black"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/takeaway_favorable3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新客户立减10元"
            android:visibility="gone"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/tv_favorable_bg3"
            android:textColor="@color/text_black"
            android:textSize="12sp" />

    </LinearLayout>

        <View

            style="@style/Divider"
            android:layout_marginTop="15dp"

            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商家信息"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textColor="@color/text_black"
        android:textSize="12sp" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sj_phone"

            android:textColor="@color/text_black"
            android:textSize="12sp" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/takeaway_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13333333333"

            android:gravity="center"
            android:drawableRight="@drawable/ic_deal_arrow_right"
            android:textColor="@color/fangdai_unselect"

            android:textSize="12sp" />
    </LinearLayout>


    <View
        android:id="@+id/divider3"
        style="@style/Divider"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家地址： "

            android:textColor="@color/text_black"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/takeaway_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sj_phone"

            android:textColor="@color/graytext"
            android:textSize="12sp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="营业时间"

            android:textColor="@color/text_black"
            android:textSize="12sp" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/takeaway_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00-23:00"

            android:textColor="@color/graytext"
            android:textSize="12sp" />



    </LinearLayout>

    </LinearLayout>
</LinearLayout>