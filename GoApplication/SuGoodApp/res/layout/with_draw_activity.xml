<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/with_draw_all_rl"

    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/with_draw_header_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/red">

        <ImageView
            android:id="@+id/with_draw_back"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/back_icon" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提现申请"
            android:textColor="@color/white"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:id="@+id/with_draw_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="进度"
            android:textColor="@color/white"
            android:textSize="@dimen/text_middle"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:id="@+id/with_draw_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/with_draw_header_rl"
        android:background="#66000000"
        android:visibility="gone" />


    <TextView
        android:id="@+id/with_draw_account_name_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/with_draw_account_type"
        android:layout_alignTop="@+id/with_draw_account_type"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="请选择"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_middle" />

    <View
        android:id="@+id/with_draw_account_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/with_draw_account_type"
        android:background="@color/text_grey" />

    <TextView
        android:id="@+id/with_draw_account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/with_draw_account_line"
        android:padding="15dp"
        android:text="账        号："
        android:textColor="@color/grey"
        android:textSize="@dimen/text_middle" />

    <EditText
        android:id="@+id/with_draw_account_name_ed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/with_draw_account_name"
        android:layout_alignTop="@+id/with_draw_account_name"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/with_draw_account_name"

        android:background="@drawable/market_item"
        android:gravity="center"
        android:hint="请输入提现账号"
        android:minWidth="220dp"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_middle" />


    <View
        android:id="@+id/with_draw_account_name_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/with_draw_account_name"
        android:background="@color/text_grey" />


    <TextView
        android:id="@+id/with_draw_account_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/with_draw_account_name_line"
        android:padding="15dp"
        android:text="提现金额："
        android:textColor="@color/grey"
        android:textSize="@dimen/text_middle" />


    <EditText
        android:id="@+id/with_draw_account_price_ed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/with_draw_account_price"
        android:layout_alignTop="@+id/with_draw_account_price"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/with_draw_account_price"
        android:background="@drawable/market_item"
        android:gravity="center"
        android:hint="提现金额："
        android:minWidth="220dp"
        android:maxLength="6"
        android:numeric="integer"
        android:singleLine="true"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_middle" />

    <TextView
        android:id="@+id/with_draw_account_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/with_draw_header_rl"
        android:padding="15dp"
        android:text="请选择账号类型"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_middle" />


    <View
        android:id="@+id/with_draw_account_price_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/with_draw_account_price"
        android:background="@color/text_grey" />


    <TextView
        android:id="@+id/with_draw_account_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/with_draw_account_price_line"
        android:padding="15dp"
        android:text="收款姓名："
        android:textColor="@color/grey"
        android:textSize="@dimen/text_middle" />


    <EditText
        android:id="@+id/with_draw_account_nickname_ed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/with_draw_account_nickname"
        android:layout_alignTop="@+id/with_draw_account_nickname"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/with_draw_account_nickname"
        android:background="@drawable/market_item"
        android:gravity="center"
        android:hint="输入收款人姓名："
        android:minWidth="220dp"

        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_middle" />

    <View
        android:id="@+id/with_draw_account_nickname_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/with_draw_account_nickname"
        android:background="@color/text_grey" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/with_draw_account_nickname_line"
        android:layout_margin="20dp"
        android:background="@color/red"
        android:text="提现申请"
        android:textColor="@color/white"
        android:textSize="@dimen/text_middle" />
</RelativeLayout>